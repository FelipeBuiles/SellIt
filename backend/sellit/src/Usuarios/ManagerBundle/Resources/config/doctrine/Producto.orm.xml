<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Usuarios\ManagerBundle\Entity\Producto" table="producto">
    <indexes>
      <index name="categoria_fk_idx" columns="id_categoria"/>
      <index name="estado_fk_idx" columns="id_estado"/>
      <index name="usuario_fk_idx" columns="id_usuario"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="80" nullable="false"/>
    <field name="descripcion" type="text" column="descripcion" nullable="true"/>
    <field name="precio" type="float" column="precio" precision="10" scale="0" nullable="false"/>
    <field name="activo" type="boolean" column="activo" nullable="false"/>
    <field name="fechaPublicacion" type="datetime" column="fecha_publicacion" nullable="true"/>
    <many-to-one field="idUsuario" target-entity="Usuarios">
      <join-columns>
        <join-column name="id_usuario" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idEstado" target-entity="EstadosProducto">
      <join-columns>
        <join-column name="id_estado" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idCategoria" target-entity="CategoriaProducto">
      <join-columns>
        <join-column name="id_categoria" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
